//- Nav Item Break
mixin navItemBreak
  li.nav-item
    a.nav-link |

//- Nav Item Mixin
mixin navItem(opts)
  +navItemBreak()

  li.nav-item
    a.nav-link(href=opts.href)
      i.fa.fa-fw(class=opts.icon)
      | &nbsp;
      = opts.text

