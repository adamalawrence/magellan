.navbar-brand.title MAGELLAN

.navbar-brand
  small.text-muted Archive Explorer

ul.nav.navbar-nav.pull-left.p-l-2
  +navItem({ href: '#datasets', icon: 'fa-folder-open-o', text: 'Archives' })
  +navItem({ href: '#ontologies', icon: 'fa-list-alt', text: 'Ontologies' })
  +navItem({ href: '#settings', icon: 'fa-cog', text: 'Settings' })
  +navItem({ href: '#about', icon: 'fa-question-circle-o', text: 'About' })
  +navItemBreak()
