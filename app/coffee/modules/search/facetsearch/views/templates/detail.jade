
.row.header
  .col-xs-12
    i.fa.fa-2x.fa-times.detail-close(data-click='close')

  .col-xs-12.m-t-1
    h4.card-title= data['rdfs:label']

//- Image Viewer
if views.img
  .row
    .col-xs-12.text-center
      img.img-thumbnail(data-zoom=views.img, src=views.img, style='max-height:30rem;')

//- PDF Viewer
if views.pdf
  .row
    .col-xs-12.text-center
      iframe.w-100(src=views.pdf, style='min-height:30rem;')

//- Audio Viewer
if views.audio
  .row
    .col-xs-12
      a.btn.btn-primary-outline.w-100(href=views.audio, target='_blank')
        i.fa.fa-fw.fa-file-audio-o
        | &nbsp;
        | Listen

//- Viewer Region
.row
  .col-xs-12(data-region='viewer')

//- DICOM
if views.dicom
  p.lead DICOM VIEWER
  #dicomImage(style="width:512px;height:512px;")

//- Video Viewer
if views.video
  video(width='320', height='240', controls='')
    source(src=views.video, type='video/mp4')
    | Your browser does not support the video tag.

//- Table View
.row.m-t-1
  .col-xs-12
    table.table.table-responsive.attr-table
      include ./table
