.row
  .col-lg-12

    .card.card-body
      .row
        .col-lg-8
          h4.card-title= label

        .col-lg-4.text-xs-right

          a.btn.btn-secondary.m-r-1(href="#datasets/#{id}/edit")
            i.fa.fa-fw.fa-pencil
            | &nbsp;
            | Edit

          a.btn.btn-danger-outline(href="#datasets/#{id}/destroy")
            i.fa.fa-fw.fa-trash
            | &nbsp;
            | Destroy

        .col-lg-12
          hr

      .row
        .col-lg-12
          p.lead #{_s.numberFormat(count)} Items

        .col-lg-4
          a.btn.btn-lg.btn-outline-primary.w-100(href="#datasets/#{id}/capture")
            i.fa.fa-fw.fa-paperclip
            | &nbsp;
            | Knowledge Capture

        .col-lg-4
          a.btn.btn-lg.btn-success-outline.w-100(href="#datasets/#{id}/search")
            i.fa.fa-fw.fa-search
            | &nbsp;
            | Search

        .col-lg-4
          a.btn.btn-lg.btn-success-outline.w-100(href="#datasets/#{id}/export")
            i.fa.fa-fw.fa-cloud-download
            | &nbsp;
            | Export
