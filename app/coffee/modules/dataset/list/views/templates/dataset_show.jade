.row
  .col-xs-6
    h4.card-title= label

  .col-xs-6.text-xs-right
    a.btn.btn-sm.btn-primary-outline(href="#datasets/#{id}/config")
      i.fa.fa-fw.fa-cog
      | &nbsp;
      | Configuation

  .col-xs-12
    hr

.row
  .col-xs-6

    p.lead #{count} Items

    a.btn.btn-primary-outline.w-100(href="#datasets/#{id}/search")
      i.fa.fa-fw.fa-search
      | &nbsp;
      | Search Dataset

  .col-xs-6
    p.lead Context
    ul.list-group
      each ctx, prefix in context
        li.list-group-item
          strong= prefix
          br
          = ctx
